<?xml version="1.0"?>

<vbox xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  <setting pref="extensions.dimmer.opacity" type="integer" 
           title="opacity (0 to 10)" />
  <setting pref="extensions.dimmer.defaultBehaviour" type="radio" 
           title="default behaviour">
    <radiogroup>
      <radio value="true" label="dim most pages" />
      <radio value="false" label="ignore most pages" />
    </radiogroup>
  </setting>
</vbox>
